@model IEnumerable<BlogMVC.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Listesi</h2>
<hr />

<p>
    @Html.ActionLink("Kategori Ekle", "Create",null,new {@class="btn btn-success" })
</p>

@if (TempData["Kategori"] != null)
{
    var kategori = (BlogMVC.Models.Category)TempData["Kategori"];
<div class="alert alert-success">
    <span class="glyphicon glyphicon-ok"></span>
    <b>@kategori.KategoryAdi</b> Başarıyla Kaydedildi.
</div>
}

<hr />

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th style=" width:60%;">
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th style="width:20%">
            @Html.DisplayNameFor(model => model.UrunSayisi)
        </th>
        <th style="width:220px">İşlemler</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.KategoriAdi
        </td>
        <td>
            @item.UrunSayisi
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id },new {@class="btn btn-warning btn-xl"}) 
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xl" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xl" })
        </td>
    </tr>
}

</table>
